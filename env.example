# 🛡️ SmartNameplate 環境變數範本
# 複製此檔案為 .env 並填入實際值

# ====================
# 資料庫設定
# ====================

# PostgreSQL 連接字串
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=smart_nameplate
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here

# SQL Server 連接字串 (如果使用)
SQL_SERVER_CONNECTION_STRING=Server=localhost;Database=SmartNameplate;Trusted_Connection=true;

# ====================
# JWT 認證設定
# ====================

# JWT 密鑰 (請使用強隨機字串)
JWT_SECRET_KEY=your_super_secret_jwt_key_minimum_256_bits
JWT_ISSUER=SmartNameplate
JWT_AUDIENCE=SmartNameplateUsers
JWT_EXPIRE_MINUTES=60

# ====================
# 安全設定
# ====================

# 加密密鑰
ENCRYPTION_KEY=your_aes_256_encryption_key_here
ENCRYPTION_IV=your_initialization_vector_here

# CORS 允許的來源
ALLOWED_ORIGINS=http://localhost:4200,https://yourdomain.com

# ====================
# 外部服務 API
# ====================

# 如果有使用外部服務
EXTERNAL_API_KEY=your_external_api_key
EXTERNAL_API_URL=https://api.external-service.com

# ====================
# 日誌設定
# ====================

# 日誌等級
LOG_LEVEL=Information
LOG_FILE_PATH=C:\\SmartNameplate\\Logs

# ====================
# 部署環境
# ====================

# 環境類型
ENVIRONMENT=Development
# ENVIRONMENT=Production
# ENVIRONMENT=Staging

# 是否使用 HTTPS
USE_HTTPS=false
HTTPS_PORT=443

# ====================
# 檔案上傳設定
# ====================

# 檔案上傳路徑
UPLOAD_PATH=uploads
MAX_FILE_SIZE_MB=5

# 允許的檔案類型
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif 